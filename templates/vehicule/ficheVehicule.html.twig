{% extends 'base.html.twig' %}

{% block h1 %}{{ vehicule.titre }}{% endblock %}
{% block body %}
<div class="p-3 m-3"></div>
<div class="container">
    <div class="row">

        <div class="col-7">
            <div class="col-12 border p-3 bg-white shadow-sm">
                <img src="{{asset('images/vehicule/'~ vehicule.image )}}" class="card-img-top" alt="...">
            </div>
        </div>
        <div class="col-5">      
            <div class="col-12 border py-3 bg-white shadow-sm">
                {{ form_start(form) }}
                
                    <div class="card-body">
                    <div class="row">
                        <div class="col form-group py-2">
                            <div>{{ form_label(form.statAt) }}</div>
                            <div class="text-danger">{{ form_errors(form.statAt) }}</div>
                            <div>{{ form_widget(form.statAt) }}</div>
                        </div>
                        <div class="col form-group py-2">
                            <div>{{ form_label(form.cndAt) }}</div>
                            <div class="text-danger">{{ form_errors(form.cndAt) }}</div>
                            <div>{{ form_widget(form.cndAt) }}</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-group py-2">
                            <div>{{ form_label(form.vehicule) }}</div>
                            <div class="text-danger">{{ form_errors(form.vehicule) }}</div>
                            <div>{{ form_widget(form.vehicule) }}</div>
                        </div>
                        <div class="col form-group py-2">
                            <div>{{ form_label(form.user) }}</div>
                            <div class="text-danger">{{ form_errors(form.user) }}</div>
                            <div>{{ form_widget(form.user) }}</div>
                        </div> 
                    </div>
              
                    {{ form_end(form) }}
            </div>
        </div>



    </div>
</div>
<div class="p-3 m-3"></div>

{% endblock %}