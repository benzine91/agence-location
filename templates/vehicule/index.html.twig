{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <div class="bg-white p-4 shadow-sm">
        <div class="container">
            <div class="row">
                <div class="col-11">
                    <h1 class="h2">Vehicules index</h1>
                </div>
                <div class="col-1">
                    <a href="{{ path('app_vehicule_new') }}" type="button" class=" btn btn-outline-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ajouter un employÃ©"><i class="bi bi-plus-lg"></i></a>
                </div>
            </div>   
        </div>
    </div>
<div class="m-4 p-4"></div>
    <div class="container">
        <div class="card">
            <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Marque</th>
                        <th>Model</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Prix</th>
                        <th>CreateAt</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for vehicule in vehicules %}
                    <tr>
                        <td>{{ vehicule.id }}</td>
                        <td>{{ vehicule.titre }}</td>
                        <td>{{ vehicule.marque }}</td>
                        <td>{{ vehicule.model }}</td>
                        <td>{{ vehicule.description }}</td>
                        <td>{{ vehicule.image }}</td>
                        <td>{{ vehicule.prix }}</td>
                        <td>{{ vehicule.createAt ? vehicule.createAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop3" type="button" class="btn btn-outline-primary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-gear"></i></button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop3" style="">
                                    <a class="dropdown-item" href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}">Afficher</a>
                                    <a class="dropdown-item" href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}">Editer</a>
                                    </div>
                                </div>
                                </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
