{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}

    <div class="bg-white p-4 border-bottom shadow-sm">
        <div class="container">
            <div class="row">
                <div class="col-10">
                    <h1 class="h2">Editer vehicule</h1>
                </div>
            </div>   
        </div>
    </div>

    <div class="p-3 m-3"></div>
        <div class="container">
            <div class="card text-center">
                <div class="card-header bg-white">
                    <div class="col-12 row justify-content-end">
                        <div class="col-2 row  justify-content-end">
                            <div class="col-4">
                                <a href="{{ path('app_vehicule_index') }}" type="button" class="btn btn-outline-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="AllÃ©e a la list des vehicules"><i class="bi bi-list-ul"></i></i></a>
                            </div>
                           <div class="col-4">
                                 <a id="submitform" href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-outline-success"  data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editer le vehicule "><i class="bi bi-pencil"></i></a>
                            </div>
                            {{ include('vehicule/_delete_form.html.twig') }}
                        </div> 
                    </div>
                </div>
                <div class="card-body">

                    <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ vehicule.id }}</td>
                                </tr>
                                <tr>
                                    <th>Titre</th>
                                    <td>{{ vehicule.titre }}</td>
                                </tr>
                                <tr>
                                    <th>Marque</th>
                                    <td>{{ vehicule.marque }}</td>
                                </tr>
                                <tr>
                                    <th>Model</th>
                                    <td>{{ vehicule.model }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ vehicule.description }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td><img width="100" height="auto" src="{{asset('images/vehicule/'~ vehicule.image )}}" class="img-fluid" alt="..."></td>
                                    
                                </tr>
                                <tr>
                                    <th>Prix</th>
                                    <td>{{ vehicule.prix }}</td>
                                </tr>
                                <tr>
                                    <th>CreateAt</th>
                                    <td>{{ vehicule.createAt ? vehicule.createAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>


                </div>

            </div>
        </div>    
    <div class="p-3 m-3"></div>


{% endblock %}
